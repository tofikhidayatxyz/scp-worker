{
  "name": "bee-book-worker",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build --production; cp ./.env ./build/.env",
    "start": "node ./build/server.js",
    "test": "node ace test",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "pm2:restart": "pm2 restart ecosystem.config.js"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.9.5",
    "@japa/preset-adonis": "^1.2.0",
    "@japa/runner": "^2.5.1",
    "@types/proxy-addr": "^2.0.0",
    "@types/source-map-support": "^0.5.6",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.8.8",
    "typescript": "~4.6",
    "youch": "^3.2.3",
    "youch-terminal": "^2.2.0"
  },
  "dependencies": {
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/drive-s3": "^1.3.2",
    "@adonisjs/lucid": "^18.4.0",
    "@adonisjs/redis": "^7.3.2",
    "@adonisjs/repl": "^3.1.11",
    "@adonisjs/view": "^6.2.0",
    "@ejekanshjain/html-pdf": "^1.2.0",
    "@pycodehub/rouge": "^2.0.0",
    "@rocketseat/adonis-bull": "^1.0.4",
    "@webmogilevtsev/html-to-pdf": "^1.0.3",
    "axios": "^1.4.0",
    "google-tts-api": "^2.0.2",
    "html-pdf": "^3.0.1",
    "js-tiktoken": "^1.0.7",
    "lodash": "^4.17.21",
    "luxon": "^3.3.0",
    "mysql2": "^3.3.3",
    "natural": "^6.3.0",
    "node-nlp": "^4.27.0",
    "node-summarizer": "^1.0.7",
    "node-summary": "^1.2.0",
    "nodejs-text-summarizer": "^2.0.3",
    "openai": "^4.14.1",
    "pdf-parse": "^1.1.1",
    "pdf-puppeteer": "^1.1.11",
    "pdf-toolz": "^1.1.8",
    "phantom-html-to-pdf": "^0.8.3",
    "proxy-addr": "^2.0.7",
    "puppeteer": "^21.5.2",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "text-cleaner": "^1.2.1",
    "text-summarization": "^1.0.4",
    "text-summary": "^2.0.4",
    "textrank": "^1.0.5",
    "tiktoken": "^1.0.10"
  }
}
